{% extends 'base.html.twig' %}

{% block title %}Projets index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('/css/style.css') }}">
{% endblock %}

{% block body %}
    <header class="header">
        <h1 class="h1">Développeur KynZo</h1>
    </header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('home') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door" viewBox="0 0 16 16">
                                <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5z"/>
                            </svg>
                            Accueil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('projets_index') }}">Projets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Profil</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Rechercher" aria-label="Search">
                </form>
            </div>
        </div>
    </nav>
    <main>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div role="alert" class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <h2>Projets index</h2>
        <div class="table-responsive ms-3 me-3">
            <table class="table align-middle table-striped table-hover">
                <thead class="table table-dark">
                    <tr>
                        <th>Projet N°</th>
                        <th>ImgProjet</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Progression</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for projet in projets %}
                    <tr>
                        <td>{{ projet.id }}</td>
                        <td>{{ projet.ImgProjet }}</td>
                        <td>{{ projet.Titre }}</td>
                        <td>{{ projet.Description }}</td>
                        <td>{{ projet.Progress }} %</td>
                        <td>
                            <a href="{{ path('projets_show', {'id': projet.id}) }}">show</a>
                            <a href="{{ path('projets_edit', {'id': projet.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('projets_new') }}">Create new</a>
        </div>
    </main>
    <footer class="border mt-4">
        <p class="text-center mt-4">&copy; Copyright {{ 'now'|date('Y') }} &middot; <a href="{{ path('about') }}">About US</a></p>
    </footer>
{% endblock %}
